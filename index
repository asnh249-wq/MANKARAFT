    <input type="text" id="playerInput" placeholder="مثلا: Ali">
    <button id="confirmBtn">تأیید</button>
    <div id="playerInfo"></div>
  </div>

  <script>
    const togglePanel = (panel) => {
      panel.style.display = panel.style.display === 'none' ? 'block' : 'none';
    };

    document.getElementById('adminBtn').onclick = () => togglePanel(document.getElementById('adminInfo'));
    document.getElementById('vipBtn').onclick = () => togglePanel(document.getElementById('vipPanel'));
    document.getElementById('newsBtn').onclick = () => togglePanel(document.getElementById('newsPanel'));
    document.getElementById('warsBtn').onclick = () => togglePanel(document.getElementById('warsPanel'));
    document.getElementById('playerBtn').onclick = () => {
      const panel = document.getElementById('playerPanel');
      panel.style.display = panel.style.display === 'none' ? 'block' : 'none';
      document.getElementById('playerInput').value = '';
      document.getElementById('playerInfo').innerHTML = '';
    };

    document.getElementById('confirmBtn').onclick = () => {
      const value = document.getElementById('playerInput').value.trim().toLowerCase();
      const info = document.getElementById('playerInfo');

      if (value === 'yasin') {
        info.innerHTML = `
          <p>اسم واقعی: یاسین</p>
          <p>سابقه: صاحب سرور</p>
          <p>اخطارهای ادمینی: 0 | 3</p>
          <p class="vip-tag">VIP خریداری شده 💛</p>
        `;
      } else if (value === 'hosein') {
        info.innerHTML = `
          <p>اسم واقعی: حسین</p>
          <p>سابقه: لیدر ارتش</p>
          <p>اخطارهای ادمینی: 0 | 3</p>
        `;
      } else if (value === 'rogahaya') {
        info.innerHTML = `
          <p>اسم واقعی: رقیه</p>
          <p>سابقه: لیدر پلیس</p>
          <p>اخطارهای ادمینی: 0 | 3</p>
        `;
      } else {
        info.innerHTML = `<p>بازیکن یافت نشد.</p>`;
      }
    };
  </script>

